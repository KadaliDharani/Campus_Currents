    .card-body{
      border:2px solid black;
      border-radius: 20px;
      box-shadow: 10px 10px 5px gray;
      color:rgb(36, 37, 37);
      background-image: linear-gradient(rgb(212, 222, 233),white, rgb(193, 231, 248));
      
    }
    div.card-body:hover{
      transform: scale(1.02);
      box-shadow: 10px 10px 5px rgb(226, 221, 221);
      background-image: linear-gradient(white,rgb(211, 232, 248),white);
    }
    .card-body::before {
            content: "";
            position: absolute;
            top: 0px;
            left: 0px;
            width: 0;
            height: 0;
            background: transparent;
            border-radius: 20px;
            border: 8px solid transparent;
        }
  
        .card-body:hover::before {
            animation: animate 2s linear forwards;
            animation-iteration-count: 29;
            transform: scale(1.02);
        }
  
        @keyframes animate {
            0% {
                width: 100%;
                height: 100%;
                border-top-color: rgb(17, 22, 95);
                border-right-color: transparent;
                border-bottom-color: transparent;
                border-left-color: transparent;
            }
  
            50% {
                width: 100%;
                height: 0;
                border-top-color: rgb(130, 151, 211);
                border-right-color: rgb(47, 17, 117);
                border-bottom-color: transparent;
                border-left-color: transparent;
            }
  
            100% {
                width: 0;
                height: 0;
                border-top-color: rgb(104, 140, 180);
                border-right-color: rgb(51, 32, 104);
                border-bottom-color: transparent;
                border-left-color: transparent;
            }
        }
  
        .card-body::after {
            content: "";
            position: absolute;
            top: 0px;
            left: 0px;
            width: 0;
            height: 0;
            background: transparent;
            border-radius: 20px;
            border: 8px solid transparent;
        }
  
        .card-body:hover::after {
            animation: animates 2s linear forwards;
            animation-iteration-count: 29;
            transform: scale(1.02);
        }
  
        @keyframes animates {
            0% {
